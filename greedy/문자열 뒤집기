// μ „λ¶€ 0μΌλ΅ λ°”κΎΈλ” κ²½μ°μ™€ μ „λ¶€ 1λ΅ λ°”κΎΈλ” κ²½μ°μ¤‘μ—μ„ λ” μ μ€ νμλ¥Ό κ°€μ§€λ” κ²½μ°λ¥Ό κ³„μ‚°ν•΄λ³΄μ π‘©β€π¤
function solution(s){
  let count0 = 0;
  let count1 = 0;

  if(s[0]==='1'){
      count0++;
  }else{
      count1++;
  }

for(let i=0;i<s.length;i++){
  if(s[i]!=s[i+1]){
    if(s[i+1]==='1') count0++;
    if(s[i+1]==='0') count1++;
  }

}

return Math.min(count0,count1);
}
